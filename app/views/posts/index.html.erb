<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>All Posts</h1>
      <ul class="list-group">

        <% @posts.each do |post| %>
          <li class="list-group-item">
            <h1> <%= link_to post.title, post %></h1>
            <br><br>
            <h3><%= post.body.truncate_words(50) %></h3>
            <br><br>
            <h4>Posted by:</h4>
            <br>
            <h4><%= post.user.email %></h4>
            <br><br><br>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add a new Post", new_post_path, class: 'btn btn-primary' %>
  </div>
</div>